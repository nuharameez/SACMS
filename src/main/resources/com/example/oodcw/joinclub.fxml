<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oodcw.JoinClub">
   <children>
      <ImageView fitHeight="400.0" fitWidth="600.0">
         <image>
            <Image url="@SCAMS_NewBG.png" />
         </image>
      </ImageView>
      <ChoiceBox fx:id="selectClub" layoutX="155.0" layoutY="200.0" prefHeight="31.0" prefWidth="289.0" />
      <Text fill="#214469" layoutX="182.0" layoutY="160.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SELECT A CLUB YOU WISH TO JOIN " textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Text>
      <Button fx:id="joinClub" layoutX="234.0" layoutY="263.0" mnemonicParsing="false" onAction="#onJoinButtonClick" prefHeight="31.0" prefWidth="132.0" style="-fx-background-color: #fcbf49;" text="JOIN" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
      <Text fill="#214469" layoutX="191.0" layoutY="67.0" strokeType="OUTSIDE" strokeWidth="0.0" text="JOIN A CLUB" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Text>
      <Label fx:id="joinMessage" alignment="CENTER" contentDisplay="CENTER" layoutX="185.0" layoutY="76.0" textAlignment="CENTER" textFill="#358410">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label fx:id="errorMessage" alignment="CENTER" contentDisplay="CENTER" layoutX="195.0" layoutY="86.0" textAlignment="CENTER" textFill="#cf1c1c">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
